{
  "functions": {
    "api/webhook.go": {
      "runtime": "go1.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/webhook.go" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ],
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite"
}
