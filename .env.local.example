# Local development environment variables
# Copy to .env and fill with your values

# Telegram Bot Token (required)
BOT_TOKEN=your_bot_token_here

# MongoDB connection string (required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Neomovies API base URL
API_BASE=https://api.neomovies.ru

# Admin chat ID for bot commands
ADMIN_CHAT_ID=your_admin_chat_id

# Public base URL (optional, used for some links)
PUBLIC_BASE_URL=http://localhost:7955

# Local server port (default 7955)
PORT=7955

# Enable local Telegram polling instead of webhook
# Set to 1 to use getUpdates for local testing
LOCAL_POLLING=1
